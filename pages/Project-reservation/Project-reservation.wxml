<view class='header'>
<image src='../order/images/o-o.png' style="width:160rpx;height:160rpx;"></image>
<view class='xiang-q'>
<view class='title'>{{servicename}}</view>
<view class='time'>{{serviceExplain}}</view>
<view class='price'>￥<text class='shu-zi' style='font-size:46rpx;'>{{money}}</text>/天<text class='holiday'> (法定节假日当天费用翻倍)</text></view>
</view>
</view>
<form bindsubmit="formSubmit">
<view class='material'>
  <view class='title'>
<view class='z-s'></view>
<view class='m-s'>个人资料</view>
  </view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>姓名</view>
<view class='t-k-name'>
<input placeholder='请输入您的姓名' name='input_name' class='input-name' type='text' placeholder-style='font-size:28rpx;font-family:PingFang;color:rgba(165,170,184,1);' style="text-align:right;"  bindinput="nameInput"></input>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>手机号</view>
<view class='t-k-name' style='width:38%;'>
<input placeholder='请输入您的手机号' class='input-name' name='input_phone' value="{{phone}}" type='number' maxlength="11" bindinput="mobileInput" placeholder-style='font-size:28rpx;font-family:PingFang;color:rgba(165,170,184,1);' style="text-align:right;"></input>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>病区</view>
<view class='date-name' style='width:50%;'>
<picker mode="selector" bindchange="bindPickerChange" name='input_bq'  value="{{inpatientAreaId[pickerindex]}}" range="{{pickerArray}}" class='picker-date'  style="text-align:right;">
    <view class="picker" style="text-align:right;">
    {{pickerArray[pickerindex]}}
    </view>
    <image src='./images/bottom.png' style="width:21rpx;height:11rpx;margin-left:26rpx;margin-bottom:4rpx;"></image>
  </picker>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name'>床号</view>
<view class='t-k-name'>
<input placeholder='请输入您的床号' class='input-name' type='text' name='input_bed' placeholder-style='font-size:28rpx;font-family:PingFang;color:rgba(165,170,184,1);' style="text-align:right;" bindinput="bedInput"></input>
</view>
</view>
</view>
<!--  -->
<view class='material'>
  <view class='title'>
<view class='z-s'></view>
<view class='m-s'>服务时间</view>
<view class='add-m-s'>（不足半天按半天计算)</view>
  </view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name' style='width:50%;'>开始日期</view>
<view class='date-name' style='width:50%;'>
<picker mode="date" value="{{date}}" name='input_datastart' start="2015-09-01" end="2050-09-01" bindchange="bindDateChange" class='picker-date'>
    <view class="picker">
     {{date}}
    </view>
    <image src='./images/bottom.png' style="width:21rpx;height:11rpx;margin-left:26rpx;margin-bottom:4rpx;"></image>
  </picker>
</view>
</view>
</view>
<!--  -->
<view class='list' style='padding-left:30rpx;box-sizing:border-box;'>
<view class='kind'>
<view class='kind-name' style='width:50%;'>开始时间</view>
<view class='date-name' style='width:50%;'>
<picker bindchange="bindTimeChange" name='input_starttime'  value="{{timearray[timeindex]}}" range="{{timearray}}" class='picker-time'>
    <view class="picker">
    {{timearray[timeindex]}}
    </view>
    <image src='./images/bottom.png' style="width:21rpx;height:11rpx;margin-left:26rpx;margin-bottom:4rpx;"></image>
  </picker>
</view>
</view>
</view>
<!--  -->
<view class='b-zhu'>
<view class='title'>备注</view>
<input  name='input_text' type='text' maxlength="255"  bindinput="onmarkInput"  value='{{remark}}'  class='m-s' placeholder='请在这里输入备注内容' placeholder-style='font-size:28rpx;color:rgba(165,170,184,1);' style='height:70rpx;width:100%;'></input>
</view>
<button class="button {{mobile&&name&&bed?'active':''}}" bindtap="regist" form-type='submit'>确认预约</button>
<view class="buuton-t"></view>
</form>
